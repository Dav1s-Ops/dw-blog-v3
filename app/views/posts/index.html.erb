<section class="welcome-section">
  <%= image_tag "it-me.png", alt: "It's Davis!", class: "welcome-img" %>
  <div class="welcome-content-container">
    <h1 class="welcome-title">Welcome!</h1>
    <p class="welcome-text">My name is Davis and I'm a SWE with a SRE focus. This is my blog where I share my thoughts, projects, and tutorials. Feel free to explore the categories and dive into the posts below. Enjoy your stay!</p>
    <div class="welcome-links">
      <a href="https://www.dw-portfolio.com/" target="_blank" rel="noopener noreferrer" title="Visit My Website">
        <%= inline_svg_tag "website-icon.svg", class: "welcome-icon" %>
      </a>
      <a href="https://github.com/Dav1s-Ops" target="_blank" rel="noopener noreferrer" title="Visit My GitHub">
        <%= inline_svg_tag "github-icon.svg", class: "welcome-icon" %>
      </a>
      <a href="https://www.linkedin.com/in/davis-weimer" target="_blank" rel="noopener noreferrer" title="Visit My LinkedIn">
        <%= inline_svg_tag "linkedin-icon.svg", class: "welcome-icon" %>
      </a>
    </div>
  </div>
</section>
<section class="posts-container" id="posts-container">
  <section class="category-bar-flex" data-controller="categories-bar">
    <%= posts_header(@category) %>
    <figure 
      class="categories-bar-container"
      data-categories-bar-target="categoriesBar"
    >
      <div class="category-selectors">
        <%= render_category_links(@category) %>
      </div>
    </figure>
  </section>
  <% if @posts.any? %>
    <%= render @posts %>
    <% if @pagy.next %>
      <div class="load-more-container">
        <button 
          class="load-more"
          data-controller="load-more"
          data-action="click->load-more#loadMore"
          data-load-more-url-value="<%= posts_path(category: @category, page: @pagy.next, format: :json) %>"
          >
          <span class="load-more-text">Load more</span>
          <%= image_tag "next-arrow-circle.svg", alt: "Load More Arrow", class: "load-more-icon" %>
        </button>
      </div>
    <% end %>
  <% else %>
    <h2>Nothing here yet...</h2>
    <p>I guess I better get to work. Try another category or check back soon!</p>
  <% end %>
</section>