<div class="login-form-page">
  <div class="login-form-container">
    <h2 class="login-form-header">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
      <div class="login-form-field">
        <%= f.label :email, class: "login-form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-form-input" %>
      </div>
      <div class="login-form-field">
        <%= f.label :password, class: "login-form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "login-form-input" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="login-form-checkbox-field">
          <%= f.check_box :remember_me, class: "login-form-checkbox" %>
          <%= f.label :remember_me, class: "login-form-checkbox-label" %>
        </div>
      <% end %>
      <div>
        <%= f.submit "Log in", class: "login-form-button" %>
      </div>
    <% end %>
    <div class="login-form-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
